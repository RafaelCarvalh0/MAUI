<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Tickets.PayPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:vm="clr-namespace:AppShoppingCenter.ViewModels.Tickets"
    Title="PayPage">
    <ContentPage.BindingContext>
        <vm:PayPageViewModel x:Name="vm" />
    </ContentPage.BindingContext>
    <ScrollView>
        <Grid Padding="25" RowDefinitions="Auto,Auto, Auto">
            <Label Grid.Row="0" FontSize="24">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Style="{StaticResource HeadingText01}" Text="Pague o seu" />
                            <Span Text="{x:Static system:Environment.NewLine}" />
                            <Span Style="{StaticResource HeadingText02}" Text="ESTACIONAMENTO" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Border
                Grid.Row="1"
                Margin="0,20,0,0"
                Padding="15"
                StrokeDashArray="4,2"
                StrokeShape="Rectangle"
                Style="{StaticResource BorderStyle}">
                <Grid Padding="10,0,0,0" ColumnDefinitions="*, Auto">
                    <VerticalStackLayout>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="Ticket #" />
                                        <Span Text="{Binding Ticket.TicketNumber}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="Permanência: " />
                                        <Span Text="3h 10m" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="Entrada: " />
                                        <Span Text="{Binding Ticket.DateIn}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="Saída: " />
                                        <Span Text="{Binding Ticket.DateOut}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span FontAttributes="Bold" Text="Preço: " />
                                        <Span FontAttributes="Bold" Text="{Binding Ticket.Price}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <Border
                Grid.Row="2"
                Margin="0,20,0,0"
                Padding="15"
                StrokeDashArray="4,2"
                StrokeShape="Rectangle"
                Style="{StaticResource BorderStyle}">
                <Grid Padding="10,0,0,0" ColumnDefinitions="*, Auto">
                    <VerticalStackLayout>
                        <Label Text="PIX" />
                        <Label Text="QR Code" />
                        <Image />
                        <Label Text="Copie e Cole" />
                        <Border Padding="10,0" Style="{StaticResource BorderStyle}">
                            <Entry IsReadOnly="True" Text="173128u312m9ij91y3173812321897d71j8317489172" />
                        </Border>
                        <Button Style="{StaticResource ButtonStyle}" Text="Copiar e Colar" />
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>