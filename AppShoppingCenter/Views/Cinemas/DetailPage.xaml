<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Cinemas.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppShoppingCenter.ViewModels.Cinemas"
    Title="DetailPage"
    Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <vm:DetailPageViewModel x:Name="vm" />
    </ContentPage.BindingContext>
    <Grid>

        <Label Text="{Binding Movie.Trailer}" />
        <Image
            HorizontalOptions="Center"
            Source="{Binding Movie.Cover}"
            VerticalOptions="Start" />
        <Image
            Margin="15"
            HorizontalOptions="Start"
            Source="close.png"
            VerticalOptions="Start"
            WidthRequest="29" />
        <Image
            Margin="0,110,0,0"
            Source="play.png"
            VerticalOptions="Start"
            WidthRequest="50" />
        <Border
            Margin="15"
            Padding="10,0"
            BackgroundColor="#DDB3B3B3"
            HeightRequest="28"
            HorizontalOptions="End"
            StrokeShape="RoundRectangle 30"
            StrokeThickness="0"
            VerticalOptions="Start"
            WidthRequest="82">
            <HorizontalStackLayout Spacing="5">
                <Image Source="clock.png" WidthRequest="19" />
                <Label
                    Style="{StaticResource DurationText}"
                    Text="{Binding Movie.Duration}"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Border>

        <Border
            Margin="0,260,0,0"
            Padding="50"
            BackgroundColor="White"
            StrokeShape="RoundRectangle 30, 30, 0, 0"
            StrokeThickness="0">

            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource PrimaryText}"
                    Text="{Binding Movie.Title}"
                    VerticalOptions="Center" />
                <Label
                    Margin="0,35,0,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource TertiaryText}"
                    Text="{Binding Movie.Description}"
                    VerticalOptions="Center" />
            </VerticalStackLayout>

        </Border>

    </Grid>
</ContentPage>