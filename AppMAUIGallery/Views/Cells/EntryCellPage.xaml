<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Cells.EntryCellPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EntryCellPage">
    <VerticalStackLayout>
        <TableView>
            <TableSection Title="Cadastro de Colaboradores" TextColor="Black">
                <EntryCell
                    HorizontalTextAlignment="Center"
                    Keyboard="Text"
                    LabelColor="Blue"
                    Placeholder="Digite o nome do Presidente" />
                <EntryCell
                    HorizontalTextAlignment="End"
                    LabelColor="Gold"
                    Placeholder="Digite o nome do Diretor de RH" />
                <EntryCell
                    HorizontalTextAlignment="Start"
                    LabelColor="Green"
                    Placeholder="Digite o nome do Gerente de projeto" />
                <EntryCell
                    HorizontalTextAlignment="Center"
                    LabelColor="Red"
                    Placeholder="Digite o nome do Analista" />
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>