<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <StackLayout
        Margin="20"
        Padding="20"
        BackgroundColor="Aquamarine"
        Orientation="Vertical"
        Spacing="10">

        <Label HorizontalOptions="Center" Text="Olá Mundo!" />

        <StackLayout
            BackgroundColor="Gray"
            Orientation="Horizontal"
            Spacing="10">
            <Button HorizontalOptions="Start" Text="Olá Mundo!" />
            <Button HorizontalOptions="Start" Text="Olá Mundo!" />
        </StackLayout>

        <VerticalStackLayout Spacing="10" Padding="10" Background="White">
            <Label Text="Olá Mundo!"/>
            <Label Text="Olá Mundo!"/>
        </VerticalStackLayout>
        <HorizontalStackLayout Spacing="10" Padding="10" Background="White">
            <Label Text="Olá Mundo!"/>
            <Label Text="Olá Mundo!"/>
        </HorizontalStackLayout>

        <Button
            HeightRequest="100"
            HorizontalOptions="CenterAndExpand"
            Text="Olá Mundo!"
            WidthRequest="200" />
    </StackLayout>
</ContentPage>