<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.GridLayoutPage"
             Title="GridLayoutPage">
    <Grid BackgroundColor="Beige" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" /> <!-- Ocupa uma largura de 100px -->
            <ColumnDefinition Width="Auto" /> <!-- Ocupa o restante do espaço disponível de forma automática -->
            <ColumnDefinition Width="6*" /> <!-- Ocupa 60% do espaço disponível -->
            <ColumnDefinition Width="4*" /> <!-- Ocupa 40% do espaço disponível -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Ordem de camada em cada linha do Grid -->
        <BoxView Color="MediumAquamarine"/> 
        <Label Text="Olá Mundo!"/>
    </Grid>
</ContentPage>