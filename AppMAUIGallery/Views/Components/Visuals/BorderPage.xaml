<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Visuals.BorderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BorderPage">
    <VerticalStackLayout Padding="10">
        <Border
            Padding="10"
            Stroke="Blue"
            StrokeDashArray="1,1,3,1,5,2"
            StrokeDashOffset="0"
            StrokeLineCap="Round"
            StrokeLineJoin="Round"
            StrokeThickness="10">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />
        </Border>
        <Border
            Padding="10"
            Stroke="Blue"
            StrokeShape="RoundRectangle, 10, 10, 0, 10">
            <Label Text="Oi como vai ?" />
        </Border>
    </VerticalStackLayout>
</ContentPage>