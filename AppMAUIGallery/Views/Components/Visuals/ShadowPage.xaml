<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Visuals.ShadowPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ShadowPage">
    <VerticalStackLayout Padding="30">
        <Border
            Padding="10"
            BackgroundColor="White"
            StrokeLineJoin="Round"
            StrokeThickness="1">
            <Border.Shadow>
                <Shadow
                    Brush="Black"
                    Opacity="0.5"
                    Radius="10"
                    Offset="10, 10" />
            </Border.Shadow>
            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    Text="Welcome to .NET MAUI!"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>