    </ContentPage.Resources>
    <VerticalStackLayout Padding="20">

        <Entry
            x:Name="EntryName"
            IsEnabled="True"
            Placeholder="Digite o nome" />

        <HorizontalStackLayout>
            <Label Text="{Binding Source={x:Reference EntryName}, Path=Text.Length}" />
            <Label Text="/1000" />
        </HorizontalStackLayout>

        <Button IsEnabled="True" Text="Salvar">
            <Button.Triggers>
                <DataTrigger
                    Binding="{Binding Source={x:Reference EntryName}, Path=Text.Length}"
                    TargetType="Button"
                    Value="0">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Button.Triggers>
        </Button>

        <Entry x:Name="EntryAge" Placeholder="Digite sua idade">
            <Entry.Triggers>
                <EventTrigger Event="TextChanged">
                    <trigger:AgeTrigger />
                </EventTrigger>
            </Entry.Triggers>
        </Entry>

        <Entry Placeholder="Digite seu e-mail">
            <Entry.Triggers>
                <MultiTrigger TargetType="Entry">
                    <MultiTrigger.Conditions>
                        <BindingCondition Binding="{Binding Source={x:Reference EntryAge}, Path=Text}" Value="18" />
                        <PropertyCondition Property="Text" Value="rafaelhenriquecarvalho@outlook.com" />
                    </MultiTrigger.Conditions>
                    <Setter Property="TextColor" Value="Green" />
                    <Setter Property="BackgroundColor" Value="LightGray" />
                </MultiTrigger>
            </Entry.Triggers>
        </Entry>

    </VerticalStackLayout>
</ContentPage>