<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Menu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Menu"
    BackgroundColor="{AppThemeBinding Light={StaticResource DarkWhite},
                                      Dark={StaticResource LightBlack}}">
    <CollectionView x:Name="MenuCollection" IsGrouped="True">
        <CollectionView.Header>
            <VerticalStackLayout Padding="20,0" Spacing="10">
                <Label
                    Margin="30"
                    FontFamily="OpenSansSemibold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="MAUI - Gallery"
                    VerticalOptions="Center" />
                <Label Text="Home">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapHome" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Extra" />
                <Label Text="CrÃ©ditos" />
            </VerticalStackLayout>
        </CollectionView.Header>
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label
                    Margin="30,20"
                    FontAttributes="Bold"
                    Text="{Binding Name}"
                    TextColor="{AppThemeBinding Light={StaticResource TertiaryBrush},
                                                Dark={StaticResource White}}" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="40,10,20,10">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer CommandParameter="{Binding Page}" Tapped="OnTapComponent" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Label Text="{Binding Title}" />
                    <Label Text="{Binding Description}" TextColor="{StaticResource Gray500}" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>